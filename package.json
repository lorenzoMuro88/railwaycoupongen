{
  "name": "couponen-cloud",
  "version": "1.0.0",
  "private": true,
  "description": "Standalone coupon generator with email + QR and in-store redemption",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "clean:db": "node scripts/clean-db.js",
    "test:csrf": "node scripts/test-csrf.js",
    "test:tenant-isolation": "node scripts/test-tenant-isolation.js",
    "test:authorization": "node scripts/test-authorization.js",
    "test:tenant-auth-users": "node scripts/test-tenant-auth-users.js",
    "test:store": "node scripts/test-store.js",
    "test:superadmin": "node scripts/test-superadmin.js",
    "test:admin-extended": "node scripts/test-admin-extended.js",
    "test:all": "npm run test:csrf && npm run test:tenant-isolation && npm run test:authorization && npm run test:store && npm run test:superadmin && npm run test:admin-extended && npm run test:products && npm run test:settings && npm run test:public && npm run test:store-complete && npm run test:signup-auth && npm run test:misc && npm run test:remaining",
    "test:coverage": "node scripts/run-tests-with-coverage.js",
    "coverage": "c8 --reporter=text --reporter=html --reporter=json npm run test:all",
    "db:migrate-email": "node scripts/migrate-tenant-email.js",
    "test:tenant-email": "node scripts/test-tenant-email-config.js",
    "test:campaigns-list": "node scripts/test-campaigns-list-endpoint.js",
    "test:form-links": "node scripts/test-form-links.js",
    "test:products": "node scripts/test-products.js",
    "test:settings": "node scripts/test-settings.js",
    "test:public": "node scripts/test-public-endpoints.js",
    "test:store-complete": "node scripts/test-store-complete.js",
    "test:signup-auth": "node scripts/test-signup-auth.js",
    "test:misc": "node scripts/test-misc-endpoints.js",
    "test:remaining": "node scripts/test-remaining-endpoints.js",
    "server:start": "node scripts/server-control.js start",
    "server:stop": "node scripts/server-control.js stop",
    "server:restart": "node scripts/server-control.js restart",
    "server:status": "node scripts/server-control.js status"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "express-session": "^1.18.2",
    "form-data": "^4.0.0",
    "mailgun.js": "^12.1.1",
    "nodemailer": "^7.0.9",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "qrcode": "^1.5.4",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "nodemon": "^3.1.4"
  }
}
